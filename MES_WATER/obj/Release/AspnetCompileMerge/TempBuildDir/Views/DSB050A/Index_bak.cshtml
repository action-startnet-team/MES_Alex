            /*bottom: 100%;*/
            /* Firefox bug fix */
            /*-moz-transform: translateY(0%);
            -webkit-transform: translateY(0%);*/
            transform: translateY(0%);
        }

        100% {
            /*bottom: 0%;*/
            transform: translateY(-50%); /* 實際整個元素的長度是畫面的兩倍 */
        }
    }

    @@keyframes marquee-Xaxis {
        0% {
            /*bottom: 100%;*/
            /* Firefox bug fix */
            /*-moz-transform: translateY(0%);
