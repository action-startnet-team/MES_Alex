@section head_plugin {
    <link href="~/Content/assets/css/custom.min.css" rel="stylesheet">

    <link href="@signalr_url/Content/bootstrap.css" rel="stylesheet" />
    <script src="@signalr_url/Scripts/modernizr-2.6.2.js"></script>
