


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@Html.Partial("pPrgName")

<div id="container" style="height: 720px"></div>

@* 這版沒有訊息方塊 *@
@*<script src="~/Scripts/assets/echarts/echarts.min.js"></script>*@

<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/echarts/dist/echarts.min.js"></script>
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/echarts-gl/dist/echarts-gl.min.js"></script>
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/echarts-stat/dist/ecStat.min.js"></script>
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/echarts/dist/extension/dataTool.min.js"></script>

<script type="text/javascript">
var dom = document.getElementById("container");
var myChart = echarts.init(dom);
var app = {};
option = null;
myChart.showLoading();


$.ajax({
    method: 'get',
    url: '/Sample/Get_TreeBasic_Data_2'
}).done(function (data) {
    console.log(data)

    myChart.hideLoading();

    echarts.util.each(data.children, function (datum, index) {
        index % 2 === 0 && (datum.collapsed = true);
    });

    myChart.setOption(option = {
        tooltip: {
            trigger: 'item',
            triggerOn: 'mousemove'
        },
        series: [
            {
                type: 'tree',

                data: [data],

                top: '1%',
                left: '7%',
                bottom: '1%',
                right: '20%',

                symbolSize: 7,

                label: {
                    position: 'left',
                    verticalAlign: 'middle',
                    align: 'right',
                    fontSize: 9
                },

                leaves: {
                    label: {
                        position: 'right',
                        verticalAlign: 'middle',
                        align: 'left'
                    }
                },

                expandAndCollapse: true,
                animationDuration: 550,
                animationDurationUpdate: 750
            }
        ]
    });
    if (option && typeof option === "object") {
        myChart.setOption(option, true);
    }

    //SetInterval(option, 10000)
})

function SetInterval(oOption, iMillisecond) {
    setInterval(function () {
        myChart.clear()
        myChart.setOption(oOption, true)
    }, iMillisecond)
}


</script>
