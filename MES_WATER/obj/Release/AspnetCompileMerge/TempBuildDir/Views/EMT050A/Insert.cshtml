                    </strong>
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <br />
                </div>
                @*修改點 向下 輸入畫面編排*@
                <div class="row">
                    <div class="col-sm-offset-2 col-md-6">
                        <div class="row">
                            <div class="col-sm-12">
                                @CustomHelper.Get_Label(Model, sPrgCode, "call_date", htmlAttributes: new { @class = "col-sm-3 control-label no-padding-right" })
