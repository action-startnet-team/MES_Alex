                    @*修改點 向上 輸入畫面編排*@
                    <br />
                    <div class="clearfix">
                        <div class="col-md-offset-5 col-md-7">
                            <input type="submit" value="儲存" class="btn btn-white btn-info btn-bold" />
                            &nbsp;
                            <a class="btn btn-white btn-pink btn-round" href=@Url.Action("Index", sPrgCode)>
