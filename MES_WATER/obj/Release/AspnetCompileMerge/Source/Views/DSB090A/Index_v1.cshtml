            let tickSize = [60, "second"]  // 刻度間隔
            let updateInterval = 1000;  // 更新間隔，每一點幾秒 單位ms
            let now = new Date().getTime() - totalPoints * updateInterval;
            //let now = new Date().getTime()

            // 初始塞空資料，顯示格線
            while (lineData.length < totalPoints) {
                now += updateInterval
                lineData.push([now, -1]);
            }

            // flot options
            var options = {
                series: {
                    lines: {
                        show: true,
                        lineWidth: 3,
                        fill: false
                    }
                },

                //x軸設定
                xaxis: {
                    mode: "time",
