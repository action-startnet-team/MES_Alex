    GetModelValidation gmv = new GetModelValidation();
    Comm comm = new Comm();
    GetData GD = new GetData();

    string pubFieldTable = CT.pubFieldTable;
    string pubPKCode = CT.pubPKCode();

    string Key = ViewBag.Key;
    string QRcode = ViewBag.QRcode;

    //電子表單欄位
