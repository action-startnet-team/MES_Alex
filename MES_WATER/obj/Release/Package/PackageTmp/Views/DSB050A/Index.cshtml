        $(function () {

            // A1L02007 hub.
            var A1L02007 = $.connection.a1L02007Hub;
            // 接收Hub函數
            A1L02007.client.dashBoard = function (para) {
                let $mac_code = $('[data-mac_code="A1L02007"]')
                //依異常狀態設定背景顏色-0:正常 1:異常
                setBackColor($mac_code, para[0])
                //設定各參數值
