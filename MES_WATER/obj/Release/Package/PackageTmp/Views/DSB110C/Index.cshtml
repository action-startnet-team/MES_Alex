@section footer_script {
    <script>
        jQuery(function ($) {
            $("input[name=query_date_s]").datepicker({ language: 'zh-TW', format: "yyyy/mm/dd", autoclose: true }).attr('autocomplete', 'off');
            $("input[name=query_date_e]").datepicker({ language: 'zh-TW', format: "yyyy/mm/dd", autoclose: true }).attr('autocomplete', 'off');

            display_table();
            display_chart();

            $("#mac_code").change(function () {
                display_table();
                display_chart();
                $("#grid-table").jqGrid('setGridParam', { datatype: 'json', }).trigger('reloadGrid')
            })
            $("#query_date_s").change(function () {
                display_table();
                display_chart();
                $("#grid-table").jqGrid('setGridParam', { datatype: 'json', }).trigger('reloadGrid')
            })
            $("#query_date_e").change(function () {
                display_table();
                display_chart();
                $("#grid-table").jqGrid('setGridParam', { datatype: 'json', }).trigger('reloadGrid')
            })
        })

        function display_table() {
            $.ajax({
                async: false,
                method: 'post',
                url: '/DSB110C/Get_Info',
                data: {
                    query_date_s: $("#query_date_s").val(),
                    query_date_e: $("#query_date_e").val(),
                    mac_code: $('#mac_code').val(),
                },
                datatype: 'json',
                success: function (data) {
                    $("#oee").val(data[0].oee_data)
                    $("#all_qty").val(data[0].qty_data)
                    //$("#oee").val();
                    //$("#all_qty").val();
                },
                error: function (xhr) {
                    alert("抓資料失敗");
                }
            })
        }

        function display_chart() {
            $.ajax({
                method: 'post',
                async: false,
                url: '@Url.Action("GetData")',
                data: {
                    query_date_s: $('#query_date_s').val(),
                    query_date_e: $('#query_date_e').val(),
                    mac_code: $('#mac_code').val(),
                },
                success: function (data) {
                    var obj1 = []
                    var obj2 = []
                    $.each(data, function (i, v) {
                        obj1[i] = v.ins_date
                        obj2[i] = v.totalqty
                    })
                    console.log("日期:" + obj1)
                    console.log("產量:" + obj2)
                    var mychart = echarts.init(document.getElementsByClassName("line_chart")[0]);

                    var option = {
                        title: {
                            text: '產出數量趨勢圖',
                            x: 'center',
                            textStyle: {
                                "fontSize": 25,
                                color: "#62B4BB"
                            }
                        },
                        tooltip: {
                            trigger: 'axis',
                            axisPointer: {
                                type: 'shadow'
                            },
                            textStyle: {
                                "fontSize": 20
                            }
                        },
                        legend: {
                            data: ["產量"],
                            padding: [0, 300, 0, 0],
                            x: 'right',
                            width: 100,
                            height: 200,
                            textStyle: {
                                "fontSize": 20,
                                color: "#62B4BB"
                            }
                        },
                        xAxis: {
                            data: obj1,
                            axisLabel: {
                                textStyle: {
                                    fontSize: 18,
                                    color:"#62B4BB"
                                }
                            }
                        },
                        yAxis: {
                            type: 'value',
                            axisLabel: {
                                textStyle: {
                                    fontSize: 18,
                                    color: "#62B4BB"
                                }
                            }
                        },
                        series: [{
                            name: '產量',
                            type: 'line',
                            data: obj2,
                            symbolSize: 15,
                            symbol: 'circle',
                            itemStyle: {
                                normal: {
                                    label: {
                                        show: true,
                                        fontSize: 18,
                                        color: "#62B4BB"
                                    },
                                    lineStyle: {
                                        width:5
                                    }
                                }
                            }
                        }]
                    };
                    mychart.setOption(option);
                },
                error: function () {
                    alert(88)
                }
            })
        }

        $('form').submit(function () {
            if ($("#cus_code").val() == "") {
                alert("請選擇客戶編號")
                return false
            } else if ($("#edition").val() == "") {
                alert("請選擇客戶版次")
                return false
            }else {
                $('form input:submit').attr('disabled', 'disabled');
            }
        });


        // chosen select
        if (!ace.vars['touch']) {
            $('.chosen-select').chosen({ allow_single_deselect: true });
            //resize the chosen on window resize

            $(window)
            .off('resize.chosen')
            .on('resize.chosen', function () {
                $('.chosen-select').each(function () {
                    var $this = $(this);
                    $this.next().css({ 'width': $this.parent().width() });
                })
            }).trigger('resize.chosen');
            //resize chosen on sidebar collapse/expand
            $(document).on('settings.ace.chosen', function (e, event_name, event_val) {
                if (event_name != 'sidebar_collapsed') return;
                $('.chosen-select').each(function () {
                    var $this = $(this);
                    $this.next().css({ 'width': $this.parent().width() });
                })
            });

            $('#chosen-multiple-style .btn').on('click', function (e) {
                var target = $(this).find('input[type=radio]');
                var which = parseInt(target.val());
                if (which == 2) $('#form-field-select-4').addClass('tag-input-style');
                else $('#form-field-select-4').removeClass('tag-input-style');
            });
        }

        
    </script>

