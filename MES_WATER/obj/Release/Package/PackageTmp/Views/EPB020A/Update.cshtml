        });

        /* 資料來源代號查詢 開始 */
        let select_modal_form = $('#Select_code-modal-form')
        $('#grid-table').on('click', 'input[name="select_code"]', function(){

            // 取得點選input時的 rowId
            let rowId = $(this).closest('tr').attr('id')

            // 儲存rowId
            select_modal_form.data('jqGrid_rowId', rowId)

            // open bootstrap modal box
            select_modal_form.modal('show');

            // set select width and work around chosen hidden width problem
            $('select[name="data_select_code"]').next().css({
                width: '50%',
            })

            // select_code 預設值
            if ($(this).val()){
                select_modal_form.find('input[name="query_select_code"]').val($(this).val())
                Set_SelectCode($(this).val(), select_modal_form.find('select[name="data_select_code"]'))
            }

            // focus input
            select_modal_form.find('input[name="query_select_code"]').focus()

            // 預設全選文字
            //document.getElementById('modal-form').querySelector('input[name="query_select_code"]').select()
        })

        // 將modal box 的 select_code 寫到之前點選的 jqgrid 的 input
        select_modal_form.find('#SetValueBack').click(function(){
            // 取得 jqGrid 的 rowId
            let rowId = select_modal_form.data('jqGrid_rowId')

            // set select_code
            let select_code = select_modal_form.find('select[name="data_select_code"]').val()
            $('#grid-table').find('tr[id="' + rowId + '"]').find('input[name="select_code"]').val(select_code)

            // set select_name
            let select_text = select_modal_form.find('select[name="data_select_code"] option:selected').text()
            // select_text: select_code - select_name
            select_name = select_text.replace(select_code + ' - ', '')
            $('#grid-table').find('tr[id="' + rowId + '"]').find('input[name="select_name"]').val(select_name)

        })

        // select placeholder
        select_modal_form.find('select[name="data_select_code"]').chosen({
            placeholder_text_single: "請輸入前N碼資料來源代號",
        })

        // input query condition and dynamically show relative select dropdownlist
        select_modal_form.on('keyup change', 'input[name="query_select_code"]', function(){

            Set_SelectCode($(this).val(), select_modal_form.find('select[name="data_select_code"]'))
        })

        function Set_SelectCode(query, $select) {
            // 輸入條件為空時
            if (!query) {
                $select.empty()
                $select.trigger("chosen:updated")
                return
            }
            $.ajax({
                method: 'get',
                url: '@Url.Action("Get_SelectCode", "EPB020A")',
                data: { pTkCode: query },
                success: function (data) {
                    $select.empty()
                    if (data.length > 0) {
                        for (let i = 0; i < data.length; i++) {
                            $select.append($('<option>').val(data[i].field_code).text(data[i].field_code + ' - ' + data[i].field_name))
                        }
                    } else {
                        $select.append($('<option>').val('').text('沒有符合條件的資料來源!'))
                    }
                    $select.trigger("chosen:updated")
                },
                error: function (jqXHR) {
                    console.log('ajax error ' + jqXHR.status + ': ' + jqXHR.statusText)
                }
            })
        }
        /* 資料來源代號查詢 結束 */


        $('input[name=@key]').attr('readonly', 'readonly');
        // checkbox value ( Y/N )
        $('form').find($('input[type="checkbox"]')).each(function(){
            // default
            if ($(this).prop('checked')){
                // set checked value
                $(this).val('Y')
            } else {
                // set unchecked value
                $(this).before($('<input type="hidden" value="N" name="' + $(this).attr('name') + '" />'))
            }
            // change state
            $(this).change(function(){
                if (this.checked){
                    // set checked value and remove hidden input for unchecked value
                    $(this).val('Y')
                    $(this).prev('input[type="hidden"]').remove()
                }else{
                    // set unchecked value
                    $(this).before($('<input type="hidden" value="N" name="' + $(this).attr('name') + '" />'))
                }
            })
        })

        // form validate, show error msg
        $("#validation_form").bind("invalid-form.validate", function () {
            $("#errMsgSummary").removeClass('hidden');
        });
        // prevent twice submit
        $('#validation_form').submit(function () {

            $('[name="file"]').removeAttr('accept')

            if ($(this).valid()) {
                $('form input:submit').attr('disabled', 'disabled');
            } else {
                $('form input:submit').removeAttr('disabled')
            }
        });

        // chosen select
        if (!ace.vars['touch']) {
            $('.chosen-select').chosen({ allow_single_deselect: true });
            //resize the chosen on window resize

            $(window)
            .off('resize.chosen')
            .on('resize.chosen', function () {
                $('.chosen-select').each(function () {
                    var $this = $(this);
                    $this.next().css({ 'width': $this.parent().width() });
                })
            }).trigger('resize.chosen');
            //resize chosen on sidebar collapse/expand
            $(document).on('settings.ace.chosen', function (e, event_name, event_val) {
                if (event_name != 'sidebar_collapsed') return;
                $('.chosen-select').each(function () {
                    var $this = $(this);
                    $this.next().css({ 'width': $this.parent().width() });
                })
            });

            $('#chosen-multiple-style .btn').on('click', function (e) {
                var target = $(this).find('input[type=radio]');
                var which = parseInt(target.val());
                if (which == 2) $('#form-field-select-4').addClass('tag-input-style');
                else $('#form-field-select-4').removeClass('tag-input-style');
            });

        }

        autosize($('textarea[class*=autosize]'));
        $(document).one('ajaxloadstart.page', function(e) {
            autosize.destroy('textarea[class*=autosize]')

            $('.limiterBox,.autosizejs').remove();
            $('.daterangepicker.dropdown-menu,.colorpicker.dropdown-menu,.bootstrap-datetimepicker-widget.dropdown-menu').remove();
        });

    })
</script>

