                method: 'post',
                url: '@Url.Action("Check_Data_D1", sPrgCode)',
                data: postdata,
                datatype: 'json',
                success: function (data) {
                    if (!data.result){
                        result = [data.result, data.message];
                    }
                },
                error: function () {
                    alert("ajax連線失敗!");
                }
            })

            // prevent twice submit
            if (result[0])
                $('#sData, #cData').attr('disabled', 'disabled');

            return result;
        }
