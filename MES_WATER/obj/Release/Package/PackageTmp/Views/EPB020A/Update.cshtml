        var Get_selectObject = function (list) {
            //let arr = JSON.parse(list);
            let arr = list
            let selectObject = {};
            //selectObject[""]=[""];
            for (let i = 0; i < arr.length; i++) {
                selectObject[arr[i]['field_code']] = [arr[i]['field_code']] + " - " + [arr[i]['field_name']]
            }
