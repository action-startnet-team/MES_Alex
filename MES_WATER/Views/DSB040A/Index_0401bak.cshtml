                    //$(this).addClass('alarm-active')

                    if ($(this).attr('data-progress') === pCurrent) {
                        endIndex = index
                        return ;
                    }
                })
                // 設置active
                group.each(function (index) {
                    if (index <= endIndex) {
                        $(this).removeClass('alarm-notActive')
                        $(this).addClass('alarm-active')
                    }
                })
            }


